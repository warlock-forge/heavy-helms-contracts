pragma solidity ^0.8.13;

import "forge-std/Script.sol";
import {DefaultPlayerSkinNFT} from "../../../src/nft/skins/DefaultPlayerSkinNFT.sol";

contract UpdateSkinAttributesScript is Script {
    function setUp() public {}

    function run(address defaultSkinAddr, uint32 tokenId, uint8 weapon, uint8 armor) public {
        // Get values from .env
        uint256 deployerPrivateKey = vm.envUint("PK");
        string memory rpcUrl = vm.envString("RPC_URL");

        // Set the RPC URL
        vm.createSelectFork(rpcUrl);

        vm.startBroadcast(deployerPrivateKey);

        // Get the NFT contract
        DefaultPlayerSkinNFT defaultSkin = DefaultPlayerSkinNFT(defaultSkinAddr);

        // Update the CID for the specified token ID
        defaultSkin.updateSkinAttributes(tokenId, weapon, armor);
        console2.log("Updated Skin Attributes for token", tokenId);
        console2.log(
            "New Skin Attributes:",
            defaultSkin.getSkinAttributes(tokenId).weapon,
            defaultSkin.getSkinAttributes(tokenId).armor
        );

        vm.stopBroadcast();
    }
}
